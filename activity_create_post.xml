<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/create_post_activity"
    android:orientation="vertical"
    android:background="@color/Main"
    tools:context=".CreateActivity">

    <RelativeLayout
        android:background="@color/Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:padding="14dp"/>


    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/Main"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/museumbible"
                android:text="CREATE POST"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/upload_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_text_view"
                android:padding="30dp"
                android:src="@drawable/baseline_add_photo_alternate_24" />


            <EditText
                android:id="@+id/cp_title"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:gravity="start|center_vertical"
                android:hint="Title"
                android:padding="16dp" />


            <EditText
                android:id="@+id/cp_price"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"

                android:gravity="start|center_vertical"
                android:hint="Price"
                android:inputType="number"
                android:padding="16dp" />


            <EditText
                android:id="@+id/cp_description"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"

                android:gravity="start|center_vertical"
                android:hint="Description"
                android:padding="16dp" />


            <Spinner
                android:id="@+id/spinner"
                android:layout_marginTop="10dp"
                android:layout_width="372dp"
                android:layout_height="49dp" />

            <Button
                android:id="@+id/create_post_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="138dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#dfd8c6"
                android:fontFamily="@font/museumbible"
                android:text="POST"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp">


            </Button>

        </LinearLayout>

    </ScrollView>
</LinearLayout>