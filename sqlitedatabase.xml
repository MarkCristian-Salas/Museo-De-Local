<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/c_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/museumbible"
            android:text="aspog0099@gmail.com"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/c_fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/museumbible"
            android:text="Miro"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/c_lname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/museumbible"
            android:text="Asuncion"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/c_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/museumbible"
            android:text="Faokushi"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_below="@id/c_email"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
    </RelativeLayout>

</RelativeLayout>